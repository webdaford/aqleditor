<?xml version="1.0" encoding="UTF-8"?>
<templates>
  
  <template id="AQL_CREATE_TYPE"
      autoinsert="true"
      context="edu.uci.ics.asterixdb.AQL.Statement"
      deleted="false"
      description="Create type"
      enabled="true"
      name="Create Type">  
    create type ${typeName} as ${cursor}
  </template>
  
  <template id="AQL_CREATE_NODE_GROUP"
      autoinsert="true"
      context="edu.uci.ics.asterixdb.AQL.Statement"
      deleted="false"
      description="Create node group"
      enabled="true"
      name="Create Node Group">  
    create nodegroup ${nodeGroupName} on ${cursor}
  </template>
  
  <!-- Create Dataset -->
  <!-- ******************************************** -->
  <template id="AQL_CREATE_EXTERNAL_DATASET"
      autoinsert="true"
      context="edu.uci.ics.asterixdb.AQL.Statement"
      deleted="false"
      description="Create external dataset"
      enabled="true"
      name="Create External Dataset">  
    create external dataset ${name} ( ${typename} )
       using ${adapterName} ${cursor}
  </template>  
  
  <template id="AQL_CREATE_INTERNAL_DATASET"
      autoinsert="true"
      context="edu.uci.ics.asterixdb.AQL.Statement"
      deleted="false"
      description="Create external dataset"
      enabled="true"
      name="Create Internal Dataset">  
    create internal dataset ${name} ( ${typename} )
       using ${adapterName} ${cursor}
  </template>  
  
 <template id="AQL_DATASET_USING"
      autoinsert="true"
